@model HomeViewModel
@{ 
   int count = 1;
}
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create Service</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Table</h4>
            
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>icon</th>
                            <th>Title</th>
                            <th>Info</th>
                            <th>Text</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model.Services)
                        {
                            <tr>
                                <td>@count</td>
                                <td><i style="font-size:30px" class="@service.Icon"></i></td>
                                <td>@service.Title</td>
                                <td>@service.Info</td>
                                <td>@service.Info2</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@service.Id"><i class="fas fa-edit"></i> Edit</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@service.Id"><i class="fas fa-trash-alt"></i> Delete</a>
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
